<window id="2007">
	<defaultcontrol>2</defaultcontrol>
	<controls>

	<control type="group" id="1">
		<posx>-10</posx>
		<posy>380</posy>

		<control type="image" id="1">
			<posx>-10</posx>
			<posy>68</posy>
			<width>760</width>
			<height>150</height>
			<texture border="0,0,22,0">osd-infobar.png</texture>
			<include>fadeinout-osd</include>
			<visible>Player.ShowInfo</visible>
		</control>

		<control type="group" id="1">
			<visible>Player.ShowInfo</visible>
			<include>fadeinout-osd-info</include>
			
			<control type="image" id="1">
				<description>cover image</description>
				<posx>25</posx>
				<posy>98</posy>
				<width>100</width>
				<height>85</height>
				<info>musicplayer.cover</info>
				<bordertexture border="2">list-focus.png</bordertexture>
				<bordersize>2</bordersize>
				<aspectratio align="left">keep</aspectratio>
			</control>
			
			<control type="label" id="1">
				<description>Movie Title</description>
				<width>420</width>
				<posx>115</posx>
				<posy>100</posy>
				<info>musicplayer.Title</info>
				<align>left</align>
				<font>h1</font>
			</control>
			
			<control type="label" id="1">
				<description>Movie Genre</description>
				<width>520</width>
				<posx>115</posx>
				<posy>127</posy>
				<info>musicplayer.Genre</info>
				<align>left</align>
				<font>h4</font>
				<textcolor>sublabel-text</textcolor>
			</control>
			
			<control type="label" id="1">
				<description>Progress</description>
				<width>520</width>
				<posx>115</posx>
				<posy>156</posy>
				<align>left</align>
				<font>h3</font>
				<include>timeProgress</include>
			</control>
			
			<control type="label" id="1">
				<description>Playlist</description>
				<width>200</width>
				<posx>710</posx>
				<posy>127</posy>
				<label>$INFO[musicplayer.PlaylistPosition]$INFO[musicplayer.PlaylistLength, / ]</label>
				<align>right</align>
				<font>h4</font>
				<textcolor>sublabel-text</textcolor>
			</control>

			<control type="label" id="1">
				<description>FINISH time label</description>
				<width>310</width>
				<posx>710</posx>
				<posy>156</posy>
				<label>[B]$LOCALIZE[31068][/B]</label>	
				<align>right</align>
				<font>h3</font>
				<textcolor>sublabel-text</textcolor>
			</control>
		
		</control>
	</control>
	</controls>
</window>