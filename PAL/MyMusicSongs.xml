<window id="501">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	
	<controls>
		<include>background</include>
		<include>allscreens</include>
		<include>mediaoverlay</include>
		<include>infobar</include>
	
		<control type="label">
			<description>description label</description>
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>4</posy>
			<width>752</width>
			<align>center</align>
			<label>2</label>
			<font>page</font>
			<visible>IsEmpty(container.pluginname)</visible>
		</control>
		
		<control type="label">
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>5</posy>
			<width>720</width>
			<align>center</align>
			<info>Container.PluginName</info>
			<font>page</font>
			<visible>!IsEmpty(container.pluginname)</visible>
		</control>

		<control type="group">
			<description>page content</description>
			<include>pageslide</include>
			<include>viewsmenu</include>
			<include>viewsmenucontext</include>
			<include>ListView</include>
			<include>Icons</include>
			<include>BigIcons</include>
			<include>PageControl</include>
			
			<control type="image">
				<description>list item icon</description>
				<posx>430</posx>
				<posy>90</posy>
				<width>260</width>
				<height>260</height>
				<info>ListItem.Icon</info>
				<aspectratio align="bottom">keep</aspectratio>
				<visible>Control.IsVisible(50)</visible>
			</control>
			<control type="image">
				<description>list item icon reflection</description>
				<posx>430</posx>
				<posy>351</posy>
				<width>260</width>
				<height>260</height>
				<info>ListItem.Icon</info>
				<texture flipy="true" diffuse="fade.png">-</texture>
				<aspectratio align="bottom">keep</aspectratio>
				<visible>Control.IsVisible(50)</visible>
			</control>
			
			<control type="label">
				<posx>430</posx>
				<posy>480</posy>
				<width>260</width>
				<label>$INFO[ListItem.size]</label>
				<scroll>true</scroll>
				<font>h2</font>
				<align>center</align>
				<textcolor>sublabel-text</textcolor>
				<visible>Control.IsVisible(50)</visible>
				<include>fadeinout</include>
			</control>

		</control>	
		
		<include>FilesMenu</include>	
	
	</controls>
</window>
