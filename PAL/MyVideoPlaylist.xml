<window id="28">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>background</include>
		<include>allscreens</include>
		
		<control type="label">
			<description>description label</description>
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>4</posy>
			<width>752</width>
			<align>center</align>
			<label>10522</label>
			<font>page</font>
		</control>

		
		<include>PageControl</include>
		<include>LibraryPlaylistMenu</include>
		
	<control type="group">
		<description>page content</description>
		<include>viewsmenu</include>
		
		<include>VideoPlaylistView</include>

		<control type="group">
			<include>pageslide</include>
			
			<control type="videowindow">
				<posx>40</posx>
				<posy>65</posy>
				<width>220</width>
				<height>210</height>
			</control>

			<control type="label">
				<description>title</description>
				<posx>280</posx>
				<posy>75</posy>
				<align>left</align>
				<font>h1</font>
				<info>VideoPlayer.Title</info>
				<textcolor>label-text</textcolor>
				<visible>Player.HasVideo</visible>
			</control>
			
			<control type="label">
				<description>genre</description>
				<posx>280</posx>
				<posy>110</posy>
				<align>left</align>
				<font>h2</font>
				<info>VideoPlayer.Genre</info>
				<textcolor>sublabel-text</textcolor>
				<visible>Player.HasVideo + !VideoPlayer.Genre</visible>
			</control>
			
			<control type="label">
				<description>studio</description>
				<posx>280</posx>
				<posy>140</posy>
				<align>left</align>
				<font>h2</font>
				<info>VideoPlayer.Studio</info>
				<textcolor>sublabel-text</textcolor>
				<visible>Player.HasVideo + !VideoPlayer.Studio</visible>
			</control>
			
			<control type="label">
				<description>year</description>
				<posx>280</posx>
				<posy>170</posy>
				<align>left</align>
				<font>h2</font>
				<info>VideoPlayer.Year</info>
				<textcolor>sublabel-text</textcolor>
				<visible>Player.HasVideo + !VideoPlayer.Year</visible>
			</control>
		
			<control type="label">
				<description>artist</description>
				<posx>280</posx>
				<posy>160</posy>
				<align>left</align>
				<font>h2</font>
				<info>VideoPlayer.Artist</info>
				<textcolor>sublabel-text</textcolor>
				<visible>Player.HasVideo + !VideoPlayer.Artist</visible>
			</control>
		
			<control type="label">
				<description>album</description>
				<posx>280</posx>
				<posy>160</posy>
				<align>left</align>
				<font>h2</font>
				<info>VideoPlayer.Album</info>
				<textcolor>sublabel-text</textcolor>
				<visible>Player.HasVideo + !VideoPlayer.Album</visible>
			</control>
			
			<control type="label">
				<description>Time Label</description>
				<posx>280</posx>
				<posy>210</posy>
				<align>left</align>
				<font>h4</font>
				<label>$INFO[player.Time]$INFO[player.Duration, / ]</label>
				<visible>Player.HasVideo</visible>
				<include>sublabel</include>
			</control>

			<control type="progress">
				<description>progress control</description>
				<posx>280</posx>
				<posy>250</posy>
				<width>400</width>
				<height>8</height>
				<info>Player.Progress</info>
				<texturebg>progressbar-background.png</texturebg>
				<lefttexture>progress-left.png</lefttexture>
				<midtexture>progress-middle.png</midtexture>
				<righttexture>progress-right.png</righttexture>
				<overlaytexture>-</overlaytexture>
				<visible>Player.HasVideo</visible>
			</control>

		
			<control type="label">
				<description>LastFM status</description>
				<posx>210</posx>
				<posy>205</posy>
				<align>left</align>
				<font>h2</font>
				<label>LastFM: $INFO[AudioScrobbler.SubmitState]</label>
				<visible>Player.HasAudio</visible>
				<include>sublabel</include>
				</control>
			</control>

</control>	

	</controls>
</window>
