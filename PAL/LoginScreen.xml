<window id="29">
	<defaultcontrol always="true">52</defaultcontrol>

	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	
	<controls>

		<control type="fixedlist" id="52">
			<posx>172</posx>
			<posy>190</posy>
			<width>360</width>
			<height>500</height>
			<onleft>100</onleft>
			<onright>100</onright>
			<onup>52</onup>
			<ondown>52</ondown>
			<wraparound>yes</wraparound>
			<focusposition>1</focusposition>
			<orientation>horizontal</orientation>
			<include>fadeinout</include>
			
			<itemlayout height="130" width="120">
				<control type="image">
					<posx>4</posx>
					<posy>4</posy>
					<width>112</width>
					<height>112</height>
					<aspectratio>scale</aspectratio>
					<info>ListItem.Icon</info>
				</control>
			</itemlayout>
			
			<focusedlayout height="130"  width="120">
				
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>120</width>
					<height>120</height>
					<aspectratio>keep</aspectratio>
					<texture border="2">list-focus.png</texture>
					<animation type="focus">
						<effect type="zoom" tween="quadratic" start="100,100" end="120,120" center="20,50" time="400" delay="100"/>
					</animation>
					<animation type="unfocus">
						<effect type="zoom" tween="quadratic" start="120,120" end="100,100" center="20,50" time="200"/>
					</animation>
				</control>

				<control type="image">
					<posx>4</posx>
					<posy>4</posy>
					<width>112</width>
					<height>112</height>
					<aspectratio>scale</aspectratio>
					<info>ListItem.Icon</info>
					<animation type="focus">
						<effect type="zoom" tween="quadratic" start="100,100" end="120,120" center="20,50" time="400" delay="100"/>
					</animation>
					<animation type="unfocus">
						<effect type="zoom" tween="quadratic" start="120,120" end="100,100" center="20,50" time="200"/>
					</animation>
				</control>
		
			</focusedlayout>
		</control>
		
		<control type="label">
			<description>date label</description>
			<posy>350</posy>
			<width>720</width>
			<label>[B]$INFO[ListItem.Label][/B]</label>
			<align>center</align>
			<font>h2</font>
			<include>fadeinout</include>
		</control>
		
		<control type="label">
			<description>date label</description>
			<posy>380</posy>
			<width>720</width>
			<label>$INFO[ListItem.Label2]</label>
			<align>center</align>
			<font>menu</font>
			<textcolor>sublabel-text</textcolor>
			<include>fadeinout</include>
		</control>

	</controls>
</window>