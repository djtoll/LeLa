<window id="500">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	
	<controls>
		<include>background</include>
		<include>allscreens</include>
		
		<control type="label">
			<description>description label</description>
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>5</posy>
			<width>752</width>
			<align>center</align>
			<label>10517</label>
			<font>page</font>
		</control>
	
	<include>LibraryPlaylistMenu</include>
	
	<control type="group">		
		<include>viewsmenu</include>
		<include>viewsmenucontext</include>
		<include>PageControl</include>
		<include>pageslide</include>
		<include>PlaylistView</include>

		<control type="image">
			<posx>32</posx>
			<posy>70</posy>
			<width>150</width>
			<height>150</height>
			<info>MusicPlayer.Cover</info>
			<bordertexture border="2">list-focus.png</bordertexture>
			<bordersize>4</bordersize>
			<aspectratio align="left">keep</aspectratio>
			<visible>Player.HasAudio</visible>
			<include>fadereplace</include>
		</control>
		<control type="image">
			<posx>32</posx>
			<posy>210</posy>
			<width>150</width>
			<height>150</height>
			<info>MusicPlayer.Cover</info>
			<bordertexture border="2">-</bordertexture>
			<bordersize>4</bordersize>
			<texture flipy="true" diffuse="fade2.png">-</texture>
			<aspectratio align="left">keep</aspectratio>
			<visible>Player.HasAudio</visible>
			<include>fadereplace</include>
		</control>

		<control type="image">
			<posx>30</posx>
			<posy>70</posy>
			<width>150</width>
			<height>150</height>
			<texture>CDCase.png</texture>
			<aspectratio>keep</aspectratio>
			<visible>!Player.HasAudio</visible>
			<include>fadereplace</include>
		</control>
		
		<control type="image">
			<posx>30</posx>
			<posy>220</posy>
			<width>150</width>
			<height>150</height>
			<texture flipy="true" diffuse="fade2.png">CDCase.png</texture>
			<aspectratio align="bottom">keep</aspectratio>
			<visible>!Player.HasAudio</visible>
			<include>fadereplace</include>
		</control>
	
		<control type="label">
			<description>title</description>
			<posx>180</posx>
			<posy>65</posy>
			<align>left</align>
			<font>h1</font>
			<info>MusicPlayer.Title</info>
			<textcolor>label-text</textcolor>
			<visible>Player.HasAudio</visible>
		</control>
	
		<control type="label">
			<description>artist</description>
			<posx>180</posx>
			<posy>100</posy>
			<align>left</align>
			<font>h2</font>
			<info>MusicPlayer.Artist</info>
			<textcolor>sublabel-text</textcolor>
			<visible>Player.HasAudio</visible>
		</control>
	
		<control type="label">
			<description>album</description>
			<posx>180</posx>
			<posy>130</posy>
			<align>left</align>
			<font>h2</font>
			<info>MusicPlayer.Album</info>
			<textcolor>sublabel-text</textcolor>
			<visible>Player.HasAudio</visible>
		</control>
	
		<control type="label">
			<description>Time Label</description>
			<posx>180</posx>
			<posy>167</posy>
			<align>left</align>
			<font>h4</font>
			<label>$INFO[player.Time]$INFO[player.Duration, / ]</label>
			<visible>Player.HasAudio</visible>
			<include>sublabel</include>
		</control>

		<control type="progress">
			<description>progress control</description>
			<posx>180</posx>
			<posy>207</posy>
			<width>510</width>
			<height>8</height>
			<info>Player.Progress</info>
			<texturebg>progressbar-background.png</texturebg>
			<lefttexture>progress-left.png</lefttexture>
			<midtexture>progress-middle.png</midtexture>
			<righttexture>progress-right.png</righttexture>
			<overlaytexture>-</overlaytexture>
			<visible>Player.HasAudio</visible>
		</control>

	</control>
	
	<control type="image">
		<posx>30</posx>
		<posy>539</posy>
		<width>32</width>
		<height>32</height>
		<texture>lastfm.png</texture>
		<aspectratio align="left">keep</aspectratio>
		<include>fadeinout</include>
		<visible>Player.HasAudio + Skin.HasSetting(ASStatusEnable) +![Window.IsActive(107)]</visible>
	</control>
	
	<control type="label" id="200">
		<posx>0</posx>
		<posy>540</posy>
		<width>720</width>
		<label>$LOCALIZE[31082]</label>
		<textcolor>label-text</textcolor>
		<align>center</align>
		<font>h4</font>
		<include>fadeinout</include>						
		<visible>Player.HasAudio + Skin.HasSetting(ASStatusEnable) + ![Window.IsActive(114) | Window.IsActive(107)]</visible>
	</control>


	</controls>
</window>
