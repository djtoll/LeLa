			<include>home-menubar</include>
			<posx>0</posx>
			<posy>4</posy>
			<width>752</width>
			<align>center</align>
			<label>10506</label>
			<font>page</font>
			<visible>IsEmpty(container.pluginname)</visible>
		</control>
		
		<control type="label">
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>5</posy>
			<width>720</width>
			<align>center</align>
			<info>Container.PluginName</info>
			<font>page</font>
			<visible>!IsEmpty(container.pluginname)</visible>
		</control>	
			
	<include>FilesMenu</include>
	
