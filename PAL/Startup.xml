<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		
<!--- STARTUP PLAYLIST ---------------------------------->		

		<control type="button" id="10">
			<description>trigger</description>
			<onfocus>ReplaceWindow(Home)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<animation effect="fade" start="2000" end="0">Focus</animation>
			<visible>!Skin.HasSetting(Use_Startup_Playlist)</visible>
		</control>
		<control type="button" id="10">
			<description>trigger with startup Playlist</description>
			<onfocus>XBMC.PlayMedia($INFO[Skin.String(Startup_Playlist_Path)])</onfocus>
			<onfocus>ReplaceWindow(Home)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<animation effect="fade" start="2000" end="0">Focus</animation>
			<visible>Skin.HasSetting(Use_Startup_Playlist)</visible>
		</control>
		
		<control type="image">
			<description>startup animation</description>
			<posx>285</posx>
			<posy>240</posy>
			<width>148</width>
			<height>42</height>
			<texture>focusstartup.png</texture>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" easing="InOut" time="1000" />
				<effect type="fade" start="100" end="0" delay="2000" time="1000" />
			</animation>
		</control>
		
		<control type="image">
			<description>startup animation</description>
			<posx>285</posx>
			<posy>282</posy>
			<width>148</width>
			<height>42</height>
			<texture flipy="true" diffuse="fade.png">focusstartup.png</texture>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" easing="InOut" time="1000" />
				<effect type="fade" start="100" end="0" delay="2000" time="1000" />
			</animation>
		</control>
		
		<control type="label">
			<description>welcome user</description>
			<posy>310</posy>
			<width>720</width>
			<label>[COLOR=sublabel-text]$LOCALIZE[31937][/COLOR] $INFO[System.ProfileName]</label>
			<align>center</align>
			<font>menu</font>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" easing="InOut" time="1000" />
				<effect type="fade" start="100" end="0" delay="2000" time="1000" />
			</animation>
		</control>
		
	</controls>
</window>