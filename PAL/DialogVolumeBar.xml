<window id="104">
	<defaultcontrol>1</defaultcontrol>
	
	<coordinates>
		<system>1</system>
		<posx>675</posx>
		<posy>230</posy>
	</coordinates>
	
	<controls>

		<control type="group">
			<include>fadeinout</include>
			
			<control type="image">
				<posx>-30</posx>
				<posy>-185</posy>
				<width>80</width>
				<height>180</height>
				<texture border="38">dialogpanel.png</texture>
			</control>
			
			<control type="progress">
				<description>progress control</description>
				<posx>30</posx>
				<posy>0</posy>
				<width>100</width>
				<height>24</height>
				<info>Player.Volume</info>
				<texturebg>progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>progress-middle.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<visible>!Window.IsActive(113)</visible>
				<animation effect="rotate" start="0" end="-270" time="0" condition="true">conditional</animation>
			</control>

			<control type="label" id="0">
				<description>Volume Label</description>
				<posx>0</posx>
				<posy>0</posy>
				<font>h4</font>
				<align>left</align>
				<info>Player.Volume</info>
				<width>40</width>
				<height>20</height>
				<textcolor>label-text</textcolor>
				<!--<visible>!Window.IsActive(113)</visible>-->
				<visible>false</visible>
			</control>
			
		</control>
	</controls>
</window>
