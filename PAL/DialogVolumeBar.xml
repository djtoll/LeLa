<window id="104">
	<defaultcontrol>1</defaultcontrol>
	
	<coordinates>
		<system>1</system>
		<posx>460</posx>
		<posy>72</posy>
	</coordinates>
	
	<controls>

		<control type="group">
		
			<animation type="WindowOpen">
			<effect type="fade" start="0" end="300" time="300" />
		</animation>
		
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" delay="2000" time="150" />
			<effect type="slide" start="0" end="200" delay="2000" time="350" tween="Quadratic" easing="In" />
		</animation>
			<!-- <include>pageslide</include> -->
			<control type="image">
				<description>background image</description>
				<posx>-30</posx>
				<posy>-23</posy>
				<width>280</width>
				<height>80</height>
				<texture border="28">keyboardPanel.png</texture>	
			</control>
			
			<control type="progress">
				<description>progress control</description>
				<posx>-4</posx>
				<posy>8</posy>
				<width>120</width>
				<height>16</height>
				<info>Player.Volume</info>
				<texturebg>progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>progress-middle.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<visible>!Window.IsActive(113)</visible>
			</control>

			<control type="label" id="0">
				<description>Volume Label</description>
				<posx>220</posx>
				<posy>-2</posy>
				<font>cali38</font>
				<align>right</align>
				<info>Player.Volume</info>
				<width>180</width>
				<textcolor>label-text</textcolor>
				<!--<visible>!Window.IsActive(113)</visible>-->
			</control>
			
		</control>
	</controls>
</window>
