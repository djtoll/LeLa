<window id="6">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	
	<controls>
		
		<include>background</include>
		<include>infobar</include>
		<include>pagebar</include>
		
		<control type="group">
			<description>page content</description>
			<include>PageControl</include>
			<include>viewsmenu</include>
			<include>viewsmenucontext</include>
			<include>pageslide</include>
			<include>ListView</include>
			<include>Icons</include>
			<include>BigIconsF</include>
			<include>AllViewCommonPageControls</include>
			
			
			<control type="image" id="999">
				<description>list item icon</description>
				<posx>430</posx>
				<posy>72</posy>
				<height>256</height>
				<width>256</width>
				<info>ListItem.Icon</info>
				<visible>IsEmpty(ListItem.Thumb) + [Control.IsVisible(50) | Control.IsVisible(51)]</visible>
				<aspectratio align="bottom">keep</aspectratio>
			</control>

			<control type="image" id="999">
				<description>list item icon</description>
				<posx>430</posx>
				<posy>328</posy>
				<height>256</height>
				<width>256</width>
				<info>ListItem.Icon</info>
				<visible>IsEmpty(ListItem.Thumb) + [Control.IsVisible(50) | Control.IsVisible(51)]</visible>
				<texture flipy="true" diffuse="fade2.png">-</texture>
				<aspectratio align="bottom">keep</aspectratio>
			</control>

			<control type="image">
				<description>list item thumb</description>
				<posx>430</posx>
				<posy>72</posy>
				<width>260</width>
				<height>400</height>
				<info>ListItem.Thumb</info>
				<aspectratio align="bottom">keep</aspectratio>
				<visible>Control.IsVisible(50)</visible>
			</control>
			
			<control type="label">
				<description>Genre</description>
				<posx>430</posx>
				<posy>480</posy>
				<width>260</width>
				<height>200</height>
				<label>$INFO[ListItem.Genre]</label>
				<scroll>true</scroll>
				<font>h2</font>
				<align>center</align>
				<textcolor>sublabel-text</textcolor>
				<include>fadeinout</include>
			</control>

			<control type="label">
				<description>Size</description>
				<posx>430</posx>
				<posy>505</posy>
				<width>260</width>
				<height>200</height>
				<label>$INFO[ListItem.size]</label>
				<scroll>true</scroll>
				<font>h4</font>
				<align>center</align>
				<textcolor>sublabel-text</textcolor>
				<include>fadeinout</include>
			</control>
			
		</control>
		
		
<!-- PAGE HEADER -->
		
		<include>allscreens</include>

		<control type="label">
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>5</posy>
			<width>752</width>
			<align>center</align>
			<label>3</label>
			<font>page</font>
			<visible>IsEmpty(Container.PluginName)</visible>
		</control>
		
		<control type="label">
			<include>home-menubar</include>
			<posx>0</posx>
			<posy>5</posy>
			<width>720</width>
			<align>center</align>
			<info>Container.Pluginname</info>
			<visible>!IsEmpty(Container.PluginName)</visible>
			<font>page</font>
		</control>
	
	<include>FilesMenu</include>
	
	</controls>
</window>  
