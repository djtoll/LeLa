<window id="6">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	
	<controls>
		
		<include>background</include>

		<include>pagebar</include>
		
		<control type="group">
			<description>page content</description>
			<include>PageControl</include>
			<include>viewsmenu</include>
			<include>viewsmenucontext</include>
			<include>pageslide</include>
			<include>ListView</include>
			<include>Icons</include>
			<include>BigIconsF</include>
			<include>AllViewCommonPageControls</include>
			
			<control type="image">
				<description>list item icon background</description>
				<posx>360</posx>
				<posy>-8</posy>
				<width>360</width>
				<height>600</height>
				<texture>schatten2.png</texture>				
				<visible>Control.IsVisible(50) + !System.IdleTime(3)</visible>	
				<include>fadeinout-osd</include>
			</control>

			<control type="image">
				<description>list item icon</description>
				<posx>415</posx>
				<posy>70</posy>
				<width>260</width>
				<height>450</height>
				<info>ListItem.Icon</info>
				<bordertexture border="2">list-focus.png</bordertexture>
				<bordersize>10</bordersize>
				<aspectratio align="bottom">keep</aspectratio>
				<!-- <visible allowhiddenfocus="true">![Control.IsVisible(50) + System.IdleTime(3)]</visible> -->
				<visible>Control.IsVisible(50) + !System.IdleTime(3)</visible>
				<include>fadeinout-osd</include>
			</control>
		
			<control type="label">
				<description>Genre</description>
				<posx>415</posx>
				<posy>480</posy>
				<width>260</width>
				<height>200</height>
				<label>$INFO[ListItem.Genre]</label>
				<scroll>true</scroll>
				<font>h2</font>
				<align>center</align>
				<textcolor>sublabel-text</textcolor>
				<include>fadeinout</include>
			</control>

			
		</control>
		
		
<!-- PAGE HEADER -->
		
		<include>allscreens</include>

		<control type="label">
			<include>pageLabel</include>
			<label>3</label>
			<visible>IsEmpty(Container.PluginName)</visible>
		</control>
		
		<control type="label">
			<include>pageLabel</include>
			<info>Container.Pluginname</info>
			<visible>!IsEmpty(Container.PluginName)</visible>
		</control>
	
	<include>FilesMenu</include>
	
	</controls>
</window>  
