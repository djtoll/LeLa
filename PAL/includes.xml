<!-- ALL SCREEN INCLUDES --------------------------------------------------------------------->

	<include name="allscreens">	
		<control type="image" id="999">
			<include>home-start-panel</include>
			<include>home-menubar</include>
			<include>zoomout</include>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>85</height>
			<texture>menubar.png</texture>
		</control>
		<control type="label" id="12">
			<description>number of files text label</description>
			<posx>20</posx>
			<posy>7</posy>
			<align>left</align>
			<label>-</label>
			<font>objects</font>
			<textcolor>label-text</textcolor>
			<include>home-menubar</include>
		</control>
		<control type="fadelabel" id="200">
			<description>Time and Date Label</description>
			<posx>655</posx>
			<posy>7</posy>
			<width>415</width>
			<label>$INFO[System.Time]</label>
			<scrollout>false</scrollout>
			<pauseatend>5000</pauseatend>
			<textcolor>label-text</textcolor>
			<align>right</align>
			<font>date</font>
			<include>home-menubar</include>
		</control>
		<control type="label" id="1000">
			<description>profile Label</description>
			<posx>640</posx>
			<posy>5</posy>
			<width>315</width>
			<info>system.profilename</info>
			<textcolor>sublabel-text</textcolor>
			<align>right</align>
			<font>h3</font>
			<include>home-menubar</include>
			<visible>Skin.HasSetting(ProfileNameEnable)</visible>
		</control>
	
	</include>


<!-- ANIMATIONS ------------------------------------------------------------------------->

	<include name="autoscroll-plot">
		<autoscroll delay="9000" time="3000" repeat="10000">!Control.HasFocus(4)</autoscroll>
	</include>
	
	<include name="autoscroll-singleline">
		<autoscroll delay="8000" time="2500" repeat="10000">!Control.HasFocus(4)</autoscroll>
	</include>
	
	<include name="viewsmenu">

		
		<animation effect="slide" start="0" end="190" time="150" acceleration="1.2" reversible="false" condition="ControlGroup(9000).HasFocus(0)" >Conditional</animation>
		
		<animation effect="slide" start="190" end="0" time="150" acceleration="1.1" reversible="false" condition="!ControlGroup(9000).HasFocus(0)" >Conditional</animation>
	</include>
	
	<include name="viewsmenucontext">
		<animation effect="slide" start="0" end="190" time="150" acceleration="1.2" reversible="false" condition="Window.IsActive(106)">Conditional</animation>
		<animation effect="slide" start="190" end="0" time="150" acceleration="1.1" reversible="false" condition="!Window.IsActive(106)" >Conditional</animation>
	</include>

	<include name="dialog-open">
		<animation type="WindowOpen">
			<effect type="zoom" start="50" end="100" center="212,125" tween="back" time="250" />
			<effect type="fade" start="0" end="95" time="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="50" center="212,125" time="150" />
			<effect type="fade" start="95" end="0" time="200" />
		</animation>
	</include>
	
	<include name="dialog-open-info">
		<animation type="WindowOpen">
			<effect type="zoom" start="50" end="100" center="212,125" tween="back" time="250" />
			<effect type="fade" start="0" end="100" time="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="50" center="212,125" time="150" />
			<effect type="fade" start="100" end="0" time="200" />
		</animation>
	</include>
	
	<include name="dialog-open-fav">
		<animation type="WindowOpen">
			<effect type="zoom" start="50" end="100" center="100,100" tween="back" time="250" />
			<effect type="fade" start="0" end="95" time="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="50" center="100,100" time="150" />
			<effect type="fade" start="95" end="0" time="200" />
		</animation>
	</include>
	
	<include name="dialog-open-num">
		<animation type="WindowOpen">
			<effect type="zoom" start="50" end="100" center="100,100" tween="back" time="250" />
			<effect type="fade" start="0" end="95" time="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="50" center="100,100" time="150" />
			<effect type="fade" start="95" end="0" time="200" />
		</animation>
	</include>
	
	<include name="dialog-open-fs">
		<animation type="WindowOpen">
			<effect type="zoom" start="50" end="100" center="auto" time="200" />
			<effect type="fade" time="200" />
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="50" center="auto" time="200" />
			<effect type="fade" time="200" />
		</animation>
	</include>
	
	<include name="dialog-open-kb">
		<animation type="WindowOpen">
			<effect type="zoom" start="50" end="100" center="340,400" tween="back" time="250" />
			<effect type="fade" start="0" end="95" time="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="50" center="340,400" time="150" />
			<effect type="fade" start="95" end="0" time="200" />
		</animation>
	</include>

	
	<include name="fadeinout">
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="300" time="300" />
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="300" end="0" time="300" />
		</animation>
	</include>
	
	<include name="fadeinout-osd">
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="600" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="600" />
		</animation>
	</include>
	
	<include name="icon-focus">
		<animation reversible="false" effect="fade" start="70" end="100" time="100">focus</animation>
		<animation reversible="false" effect="fade" start="100" end="70" time="100">unfocus</animation>
	</include>
	
	<include name="idle-fade-movie">
		<animation effect="fade" start="100" end="0" time="150" condition="Skin.HasSetting(movielistPlot) + System.IdleTime(2)">Conditional</animation>
		<animation effect="fade" start="100" end="0" time="150" condition="Skin.HasSetting(movielistPlot) + System.IdleTime(2)">Conditional</animation>
	</include>
	
	<include name="idle-fade-poster">

		<animation effect="fade" start="100" end="0" time="400" condition="!Skin.HasSetting(movielistPlot) + System.IdleTime(2)">Conditional</animation>
		<animation effect="fade" start="100" end="0" time="400" condition="!Skin.HasSetting(movielistPlot) + System.IdleTime(2)">Conditional</animation>
	</include>
	
	<include name="idle-fade-episode">
		<animation effect="fade" start="100" end="0" time="150" condition="!IsEmpty(ListItem.Plot) + Skin.HasSetting(episodelistPlot) + System.IdleTime(2)">Conditional</animation>
	</include>
	
	<include name="home-submenu">
		<animation type="Focus">
			<effect type="slide" tween="back" easing="Out" start="0,-600" time="300" />
			<effect type="fade" start="0" end="400" time="800"/>
		</animation>
		<animation type="UnFocus">
			<effect type="slide" tween="back" easing="In" start="-600,0" time="300" />
			<effect type="fade" start="400" end="0" time="800"/>
		</animation>
	</include>
	
	<include name="pageslide">		
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="600" />
			<effect type="slide" start="200" end="0" time="300" tween="Back" easing="Out"/>
		</animation>
		
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="150" />
			<effect type="slide" start="0" end="200" time="150" />
		</animation>
	</include>
	
	<include name="home-start">
		<animation effect="fade" start="0" end="300" condition="Window.Previous(startup)" time="400">WindowOpen</animation> 
	</include>
	
	<include name="home-start-panel">
		<animation effect="slide" easing="Out" tween="back" start="0,-200" end="0,0" condition="Window.Previous(startup)" time="250" delay="1000">WindowOpen</animation> 
	</include>
	
	<include name="home-start-column">
		<animation effect="slide" easing="Out" tween="back" start="0,-200" end="0,0" condition="Window.Previous(startup)" time="250" delay="1000">WindowOpen</animation> 
	</include>
	
	<include name="home-menubar">
		<animation type="WindowOpen">
			<effect type="slide" start="0,-100" end="0,0" tween="back" condition="!Window.Previous(startup)" time="100" />
			<effect type="fade" condition="!Window.Previous(startup)" time="200" />
		</animation>
		<animation type="WindowClose">
			<effect type="slide" start="0,0" end="0,-100" tween="back" condition="!Window.Previous(startup)" time="150" />
			<effect type="fade" condition="!Window.Previous(startup)" time="200" />
		</animation>
	</include>


<!-- BACKGROUND IMAGES INCLUDES ------------------------------------------------------------------------->

	<include name="background">
				
		<control type="visualisation">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>!Window.IsActive(2005) + [![Container.Content(episodes) | Container.Content(seasons)] + Skin.HasSetting(FanartEnable)]</visible>
		</control>
		
		<control type="videowindow">
       		<posx>0</posx>
       		<posy>0</posy>
       		<width>720</width>
       		<height>576</height>
       		<visible>!Skin.HasSetting(HomeViewToggle) + ![Container.Content(episodes) | Container.Content(seasons)]</visible>
	  	</control>
		
		<control type="image">
			<description>background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture diffuse="background-diffuse2.png">background.bmp</texture>
			<visible>!Skin.HasSetting(backgroundFolder)</visible>
			
			<animation effect="fade" start="0" end="800" condition="Window.Previous(startup)" time="1300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="0" condition="Player.HasVideo  + !Skin.HasSetting(HomeViewToggle)">Conditional</animation>
			<animation effect="fade" start="100" end="70" time="0" condition="Player.HasAudio + Visualisation.Enabled  + !Skin.HasSetting(HomeViewToggle)">Conditional</animation>
		</control>

		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<timeperimage>10000</timeperimage>
			<fadetime>2000</fadetime>
			<visible>Skin.HasSetting(backgroundFolder) + [![Container.Content(episodes) | Container.Content(seasons)] + Skin.HasSetting(FanartEnable)]</visible>
			<info>Skin.String(backgroundFolderSet)</info>
			<randomize>true</randomize>
			<loop>yes</loop>
			<animation effect="fade" start="0" end="800" condition="Window.Previous(startup)" time="1300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="0" reversible="true" condition="Player.HasVideo + !Skin.HasSetting(HomeViewToggle)">Conditional</animation>
			<animation effect="fade" start="100" end="70" time="0" reversible="true" condition="Player.HasAudio + Visualisation.Enabled  + !Skin.HasSetting(HomeViewToggle)">Conditional</animation>
			<colordiffuse>ffa3a3a3</colordiffuse>
		</control>
		
		<control type="image">
			<description>multiimage overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>multiimage-overlay.png</texture>
			<colordiffuse>ffa3a3a3</colordiffuse>
			<visible>Skin.HasSetting(backgroundFolder) + Skin.String(backgroundFolderSet)</visible>
		</control>

		<control type="image">
			<description>multiimage overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>black.png</texture>
			<visible>Player.HasVideo + !Skin.HasSetting(HomeViewToggle)</visible>
		</control>
		
		<control type="image">
			<description>fanart background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture diffuse="background-diffuse2.png">$INFO[FanArt.Image]</texture>
			<aspectratio>scale</aspectratio>
			<visible>!IsEmpty(FanArt.Image) + Control.IsVisible(54) + Skin.HasSetting(FanartViewEnable)</visible>
			<animation effect="fade" start="0" end="800" time="400">WindowOpen</animation>
			<animation effect="fade" start="800" end="0" time="400">WindowClose</animation> 
		</control>

		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>!Control.IsVisible(54) +  Skin.HasSetting(FanartEnable)</visible>
			<texture>$INFO[FanArt.Image]</texture>
			<aspectratio>scale</aspectratio>
			<animation effect="fade" start="100" end="60" time="100" condition="Skin.HasSetting(FanartDim) + Skin.HasSetting(FanartDimLight)">Conditional</animation>
			<animation effect="fade" start="100" end="30" time="100" condition="Skin.HasSetting(FanartDim) + Skin.HasSetting(FanartDimStrong)">Conditional</animation>
		</control>
		
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<visible>!Control.IsVisible(54) + Skin.HasSetting(FanartEnable) + Container.Content(movies)</visible>
			<texture>$INFO[listitem.property(fanart_image)]</texture>
			<aspectratio>scale</aspectratio>
			<animation effect="fade" start="100" end="60" time="100" condition="Skin.HasSetting(FanartDim) + Skin.HasSetting(FanartDimLight)">Conditional</animation>
			<animation effect="fade" start="100" end="30" time="100" condition="Skin.HasSetting(FanartDim) + Skin.HasSetting(FanartDimStrong)">Conditional</animation>
			<animation effect="fade" start="0" end="100" reversible="true" time="100">Visible</animation>
		</control>
		
		<control type="image">
			<description>multiimage overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>multiimage-overlay.png</texture>
			<colordiffuse>ffa3a3a3</colordiffuse>
			<visible>[Container.Content(seasons) | Container.Content(episodes)] + !Control.IsVisible(54) + Skin.HasSetting(FanartEnable)</visible>
		</control>

	</include>		
	

<!-- FANART INCLUDES -------------------------------------------------------------------->

	<include name="Fanart">

		<control>
			<description>fanart osd background, fanart colors available</description>
			<type>image</type>
			<posx>0</posx>
			<posy>120</posy>
			<width>720</width>
			<height>460</height>
			<texture>fanart-overlay-colors.png</texture>
			<colordiffuse>Fanart.Color2</colordiffuse>
			<visible>Container.Content(episodes) + Control.IsVisible(54)</visible>
			<animation effect="fade" start="0" end="800" time="400">WindowOpen</animation>
			<animation effect="fade" start="800" end="0" time="400">WindowClose</animation> 
			<include>fadeinout</include>
			<visible>!IsEmpty(Fanart.Color2) + Skin.HasSetting(fanartcolorEnable)</visible>
		</control>
		
		<control>
			<description>fanart osd background, no fanart colors available</description>
			<type>image</type>
			<posx>0</posx>
			<posy>120</posy>
			<width>720</width>
			<height>460</height>
			<texture>fanart-overlay.png</texture>
			<visible>Container.Content(episodes) + Control.IsVisible(54)</visible>
			<animation effect="fade" start="0" end="800" time="400">WindowOpen</animation>
			<animation effect="fade" start="800" end="0" time="400">WindowClose</animation> 
			<include>fadeinout</include>
			<visible>!Skin.HasSetting(fanartcolorEnable) | IsEmpty(Fanart.Color2)</visible>
		</control>

	</include>		

</includes>
