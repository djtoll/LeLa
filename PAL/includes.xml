<!-- GENERAL ANIMATIONS ------------------------------------------------------------------------->

	<include name="pageslide">		
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="350" />
			<effect type="slide" start="200" end="0" time="350" tween="Back" easing="Out"/>
		</animation>
		
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="150" />
			<effect type="slide" start="0" end="200" time="250" tween="Quadratic" easing="In" />
		</animation>
	</include>

	<include name="ListScroll">
    	<animation effect="slide" start="0,-53" end="0,0" time="180" reversible="false" tween="quadratic" easing="out" condition="Container.OnNext + !Skin.HasSetting(SmoothScroll)">focus</animation>
    	<animation effect="slide" start="0,53" end="0,0" time="180" reversible="false"  tween="quadratic" easing="out" condition="Container.OnPrevious + !Skin.HasSetting(SmoothScroll)">focus</animation>
  	</include>

  	
  	<include name="BigListScroll">
    	<animation effect="slide" start="0,-152" end="0,0" time="180" reversible="false" tween="quadratic" easing="out" condition="Container.OnNext + !Skin.HasSetting(SmoothScroll)">focus</animation>
    	<animation effect="slide" start="0,152" end="0,0" time="180" reversible="false"  tween="quadratic" easing="out" condition="Container.OnPrevious + !Skin.HasSetting(SmoothScroll)">focus</animation>
  	</include>
  	
  	<include name="BigListScrollM">
    	<animation effect="slide" start="0,-74" end="0,0" time="180" reversible="false" tween="quadratic" easing="out" condition="Container.OnNext + !Skin.HasSetting(SmoothScroll)">focus</animation>
    	<animation effect="slide" start="0,74" end="0,0" time="180" reversible="false"  tween="quadratic" easing="out" condition="Container.OnPrevious + !Skin.HasSetting(SmoothScroll)">focus</animation>
  	</include>
  	
  	<include name="WideIconScroll">
    	<animation effect="slide" start="0,-68" end="0,0" time="180" reversible="false" tween="quadratic" easing="out" condition="Container.OnNext + !Skin.HasSetting(SmoothScroll)">focus</animation>
    	<animation effect="slide" start="0,68" end="0,0" time="180" reversible="false"  tween="quadratic" easing="out" condition="Container.OnPrevious + !Skin.HasSetting(SmoothScroll)">focus</animation>
  	</include>
  	
	<include name="autoscroll-plot">
