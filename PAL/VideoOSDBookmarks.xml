<window id="125">
	<defaultcontrol>2</defaultcontrol>
	
	<coordinates>
		<system>1</system>
		<posx>160</posx>
		<posy>100</posy>
	</coordinates>
	
	<include>dialog-open</include>
	
	<controls>
		
		<control type="group">	
			<control type="image" id="1">
				<description>background image</description>
				<posx>-35</posx>
				<posy>-30</posy>
				<width>470</width>
				<height>330</height>
				<texture border="38">dialogpanel.png</texture>
				<!---<colordiffuse>AAFFFFFF</colordiffuse>-->
			</control>
		
			<control type="wraplist" id="11">
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>430</height>
				<onleft>11</onleft>
				<onright>11</onright>
				<onup>999</onup>
				<ondown>999</ondown>
				<scrolltime>200</scrolltime>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
									
				<itemlayout height="170" width="130">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>130</width>
						<height>110</height>
						<info>ListItem.Thumb</info>
						<aspectratio aligny="bottom">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>110</posy>
						<width>130</width>
						<height>110</height>
						<info>ListItem.Thumb</info>
						<aspectratio aligny="top">stretch</aspectratio>
						<texture flipy="true" diffuse="fade.png">-</texture>
					</control>
					
					<control type="label">
						<posx>65</posx>
						<posy>110</posy>
						<width>130</width>
						<height>110</height>
						<align>center</align>
						<info>ListItem.Label</info>
						<font>h4</font>
					</control>
				</itemlayout>
			
				<focusedlayout height="170" width="130">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>130</width>
						<height>110</height>
						<info>ListItem.Thumb</info>
						<aspectratio aligny="bottom">stretch</aspectratio>
						<animation effect="zoom" end="-20,-15,180,160" time="250">Focus</animation>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>110</posy>
						<width>130</width>
						<height>100</height>
						<info>ListItem.Thumb</info>
						<aspectratio aligny="top">stretch</aspectratio>
						<texture flipy="true" diffuse="fade.png">-</texture>
						<animation effect="zoom" end="-20,145,180,160" time="250">Focus</animation>
					</control>
	
					<control type="label">
						<posx>65</posx>
						<posy>150</posy>
						<width>130</width>
						<height>110</height>
						<align>center</align>
						<info>ListItem.Label</info>
						<font>h4</font>
					</control>
				</focusedlayout>	
			</control>

			<control type="group" id="999">
				<posx>45</posx>
				<posy>230</posy>
						
				<control type="button" id="2">
					<description>Create Bookmark button</description>
					<posx>0</posx>
					<width>150</width>
					<label>294</label>
					<onleft>4</onleft>
					<onright>3</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<include>dialogConfirmButton</include>
				</control>
				<control type="button" id="3">
					<description>Clear Bookmarks button</description>
					<posx>160</posx>
					<width>150</width>
					<label>296</label>
					<onleft>2</onleft>
					<onright>4</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<include>dialogConfirmButton</include>
				</control>
				
			</control>
		</control>
	</controls>
</window>
